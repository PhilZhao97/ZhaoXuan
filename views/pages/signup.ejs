
<div class="homepage-wrapper">
  <div class="left-banner">
    <h1 class="title">
      Q-Pon
    </h1>
    <h2 class="subtitle">
      Redeem your coins for dining coupons.
    </h2>
  </div>
  <div class="right-banner">
    Sign up Page
  </div>
</div>

<div style="padding: 0 5rem">
  <form action="/signup" method="POST">
  <div class="field">
    <label for="name">Username</label>
      <input name="name" class="input" type="text" placeholder="username">
  </div>
  <div class="field">
    <label for="password">Password</label>
      <input name="password" class="input" type="password" placeholder="Password">
  </div>
  
  <div class="field">
    <div class="select">
    <select name="role">
      <option value="admin">Admin</option>
      <option value="member">Member</option>
    </select>
    </div>
  </div>

  <div class="field">
    <p class="control">
      <button type="submit" class="button is-success">
        Sign up
      </button>
    </p>
  </div>
</form>

<% if (typeof msg === 'undefined') {var msg = false;} %>
<% if (msg) { %>
  <div style="margin-top: 30px;" class="notification is-danger is-light">
    <button onclick="$('.notification').hide()" class="delete"></button>
    <%= msg %>
  </div>
<% } %>
</div>



